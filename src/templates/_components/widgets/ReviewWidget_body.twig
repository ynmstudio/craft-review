{% set drafts = craft.entries()
    .section([section])
    .status(['disabled', 'pending'])
    .orderBy('dateUpdated desc')
    .limit(limit)
    .all() %}

<table class="fullwidth">
    <tbody>
        {% if drafts is empty %}
            <tr><td><span class="light">{{'No entries to review'|t('review')}}</span></td></tr>
        {% else %}
            {% for draft in drafts %}
                {% set typeName = craft.review.getTypeName(draft.type) %}
                <tr>
                    <td><h6>{{typeName}}</h6> <a href="{{ draft.getCpEditUrl() }}">{{ draft.title }}</a> <span class="light">{{draft.dateUpdated|date}}, {{draft.author}}</span></td>
                </tr>
            {% endfor %}
        {% endif %}
    </tbody>
</table>



{% set drafts = craft.entries()
    .section([section])
    .drafts()
    .orderBy('dateUpdated desc')
    .limit(limit)
    .all() %}
{% if drafts is not empty %}
<hr />
<h3>{{'New Drafts'|t('review')}}</h3>
<table class="fullwidth">
    <tbody>
        {% if drafts is empty %}
            <tr><td><span class="light">{{'No entries to review'|t('review')}}</span></td></tr>
        {% else %}
            {% for draft in drafts %}
                {% set typeName = craft.review.getTypeName(draft.type) %}
                <tr>
                    <td><h6>{{typeName}}</h6> <a href="{{ draft.getCpEditUrl() }}">{{ draft.title }} ({{ draft.draftName }})</a> <span class="light">{{draft.dateUpdated|date}}, {{draft.author}}</span><br /><span>{{ draft.draftNotes }}</span></td>
                </tr>
            {% endfor %}
        {% endif %}
    </tbody>
</table>
{% endif %}